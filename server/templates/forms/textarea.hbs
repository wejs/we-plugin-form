<div class="form-group {{#if error}}has-error has-feedback{{/if}}">
  <label for="{{fieldId}}">{{{label}}}
    {{#ifCond field.allowNull false}}*{{/ifCond}}
  </label>
  <p class="help-block">{{{help}}}</p>
  <textarea id="{{fieldId}}" name="{{name}}" class="form-control" placeholder="{{{placeholder}}}"  {{{fieldAttrs}}}>{{value}}</textarea>
  {{{field-help-error error}}}
</div>