<div class="form-group {{#if error}}has-error has-feedback{{/if}}">
  <label for="{{fieldId}}">{{{label}}} {{#ifCond field.allowNull false}}*{{/ifCond}}</label>

  <div class="we-plugin-form-radios-area">
    {{#each field.fieldOptions}}
      {{#ifCond @key ../value}}
        {{#with ../this}}
          <div class="radio{{#if ../../../field.formFieldAttributes.inline}}-inline{{/if}}">
            <label>
              <input type="radio" name="{{name}}" value="{{@key}}" checked="checked" {{{fieldAttrs}}} >{{t this}}
            </label>
          </div>
        {{/with}}
      {{else}}
        {{#with ../this}}
          <div class="radio{{#if ../../../field.formFieldAttributes.inline}}-inline{{/if}}">
            <label>
              <input type="radio" name="{{name}}" value="{{@key}}" {{{fieldAttrs}}} >{{t this}}
            </label>
          </div>
        {{/with}}
      {{/ifCond}}
    {{/each}}
  </div>
  <p class="help-block">{{{help}}}</p>
  {{{field-help-error error}}}
</div>