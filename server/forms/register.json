{
  "title": "auth.login.title",

  "method": "post",
  "action": "/signup",

  "fields": {
    "fullName": {
      "type": "text",
      "defaultValue": ""
    },
    "gender": {
      "type": "select",
      "allowNull": false,
      "fieldOptions": {
        "M": "Male",
        "F": "Female"
      }
    },
    "password": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmPassword": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },
    "email": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmEmail": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },
    "recaptcha": {
      "type": "recaptcha"
    }
  },
  "actions": {
    "termSeparator": { "type": "break" },
    "acceptTerms": {
      "type": "terms-of-use",
      "allowNull": false,
      "defaultValue": false
    },
    "actionsSeparator": { "type": "break" },
    "submit": {
      "type": "submit"
    }
  }
}