{
  "title": "auth.login.title",


  "method": "post",
  "action": "/signup",

  "fields": {
    "username": {
      "type": "text",
      "defaultValue": "",
      "allowNull": false
    },

    "fullName": {
      "type": "text",
      "defaultValue": ""
    },

    "gender": {
      "type": "select",
      "allowNull": false,
      "fieldOptions": {
        "M": "Masculine",
        "F": "Feminine"
      }
    },

    "password": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmPassword": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },

    "email": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmEmail": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },

    "organization": {
      "type": "vocabulary/tag",
      "defaultValue": "",
      "vocabularyName": "Organization",
      "canCreate": true,
      "formFieldMultiple": false
    },

    "recaptcha": {
      "type": "recaptcha"
    }
  },
  "actions": {
    "termSeparator": { "type": "break" },
    "acceptTerms": {
      "type": "terms-of-use",
      "allowNull": false,
      "defaultValue": false
    },

    "actionsSeparator": { "type": "break" },
    "submit": {
      "type": "submit"
    }
  }
}